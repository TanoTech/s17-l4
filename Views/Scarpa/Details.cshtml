@{
    ViewData["Title"] = "Details page";
}

@if (TempData["messaggioAggiunta"] is not null)
{
    <div class="alert alert-success" role="alert">
        @TempData["messaggioAggiunta"]
    </div>
}
@if (TempData["messaggioErroreA"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["messaggioErroreA"]
    </div>
}

